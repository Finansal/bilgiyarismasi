<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.burakkarabiyik.bilgiyarismasi.Kategoriler">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:screenOrientation="portrait"
        android:layout_width="match_parent"
        android:background="@drawable/arkaplan4"
        android:layout_height="match_parent"
        tools:context="com.example.burakkarabiyik.bilgiyarismasi.Kategoriler">

        <Button
            android:id="@+id/button9"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"
            android:text="2x"


            android:background="@drawable/sorubtn"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:shadowDy="0"
            android:shadowRadius="5"
            />

        <Button
            android:id="@+id/button10"
            android:layout_above="@+id/editText12"
            android:layout_centerHorizontal="true"
            android:width="170dp"
            android:background="@drawable/sorubtn"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:shadowRadius="5"
            android:text="Yarı Yarıya" />


        <TextView
            android:id="@+id/editText12"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_below="@+id/button9"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="#89B55C"
            android:ems="30"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <Button
            android:id="@+id/button11"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button9"
            android:layout_below="@+id/editText12"
            android:layout_marginRight="20dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/sorubtn"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Button" />

        <Button
            android:id="@+id/button12"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button11"
            android:layout_below="@+id/button11"
            android:layout_marginRight="20dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/sorubtn"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Button" />

        <Button
            android:id="@+id/button13"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button12"

            android:layout_below="@+id/button12"
            android:layout_marginRight="20dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/sorubtn"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Button" />

        <Button
            android:id="@+id/button14"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button13"
            android:layout_below="@+id/button13"
            android:layout_marginRight="20dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/sorubtn"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Button" />

        <Button
            android:id="@+id/button15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/button14"
            android:layout_marginEnd="11dp"
            android:layout_marginTop="10dp"
            android:width="170dp"
            android:color="#89B55C"
            android:text="Çıkış" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_above="@+id/editText12"
            android:layout_alignEnd="@+id/button11"
            android:background="@drawable/textv"
            android:gravity="center"
            android:text="45"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@+id/editText12"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:background="@drawable/textv"
            android:gravity="center"
            android:padding="2dp"
            android:text="Sorunun Değeri : " />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
