<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.burakkarabiyik.bilgiyarismasi.Kategoriler">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:screenOrientation="portrait"
        android:layout_width="match_parent"
        android:background="@drawable/arkaplan4"
        android:layout_height="match_parent"
        tools:context="com.example.burakkarabiyik.bilgiyarismasi.Kategoriler">

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"
            android:text="2x" />

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText12"
            android:layout_centerHorizontal="true"
            android:text="Yarı Yarıya" />

        <TextView
            android:id="@+id/editText12"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button9"
            android:layout_below="@+id/button9"
            android:layout_marginTop="51dp"
            android:ems="30"
            android:textSize="25dp"
            android:textColor="@color/colorPrimary"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/button11"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button9"
            android:layout_below="@+id/editText12"
            android:background="@drawable/btn"
            android:layout_marginTop="64dp"
            android:text="Button" />

        <Button
            android:id="@+id/button12"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button11"
            android:layout_below="@+id/button11"
            android:background="@drawable/btn"
            android:layout_marginTop="22dp"
            android:text="Button" />

        <Button
            android:id="@+id/button13"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button12"
            android:background="@drawable/btn"
            android:layout_below="@+id/button12"
            android:layout_marginTop="11dp"
            android:text="Button" />

        <Button
            android:id="@+id/button14"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn"
            android:layout_alignStart="@+id/button13"
            android:layout_below="@+id/button13"
            android:layout_marginTop="11dp"
            android:text="Button" />

        <Button
            android:id="@+id/button15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/button14"
            android:layout_marginEnd="11dp"
            android:text="Çıkış" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
