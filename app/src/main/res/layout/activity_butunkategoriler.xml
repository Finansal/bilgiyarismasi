            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button24"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button17"
            android:layout_alignStart="@+id/button17"
